<tiles-definitions>

   <definition name="baseLayout" template="/jsp/baseLayout.jsp">
      <put-attribute name="title"  value="Template"/>
      <put-attribute name="header" value="/jsp/header_search.jsp" />
      <put-attribute name="body"   value="/jsp/home.jsp"/>
   </definition>

   <definition name="searchResult" extends="baseLayout">
      <put-attribute name="title"  value="Result"/>
      <put-attribute name="body"   value="/jsp/search_result.jsp"/>     
   </definition>
   
   <definition name="loginForm" extends="baseLayout">
       <put-attribute name="title" value="Login"/>
       <put-attribute name="body" value="/jsp/login.jsp"/>
   </definition>
  
   <definition name="Home" extends="baseLayout">
       <put-attribute name="title" value="Wellcome Home" />
       <put-attribute name="body" value="/jsp/home.jsp" />
   </definition>
   
   <definition name="lookUp" extends="baseLayout">
       <put-attribute name="title" value="Lookup" />
       <put-attribute name="body" value="/jsp/trackForm.jsp" />
   </definition>
